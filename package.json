{
  "name": "twig-formatter",
  "displayName": "Twig Formatter",
  "description": "Formatter for Twig",
  "version": "1.0.0",
  "publisher": "serhatkaya",
  "license": "MIT",
  "author": {
    "name": "Serhat Kaya",
    "email": "root@serhatkaya.dev",
    "url": "https://serhatkaya.com.tr"
  },
  "homepage": "https://github.com/serhatkaya/vscode-twig-formatter",
  "bugs": {
    "url": "https://github.com/serhatkaya/vscode-twig-formatter/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serhatkaya/vscode-twig-formatter.git"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "php",
    "twig",
    "craft",
    "beautify"
  ],
  "activationEvents": [
    "onLanguage:twig"
  ],
  "main": "./extension/index",
  "contributes": {
    "languages": [
      {
        "id": "twig",
        "aliases": [
          "HTML (Twig)",
          "twig"
        ],
        "extensions": [
          ".twig",
          ".html.twig"
        ],
        "configuration": "./src/languages/twig.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "twig",
        "scopeName": "text.html.twig",
        "path": "./src/syntaxes/twig.tmLanguage",
        "embeddedLanguages": {
          "source.json": "json",
          "source.css": "css",
          "source.css.scss": "scss",
          "source.js": "javascript",
          "source.ts": "typescript"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Twig Formatter",
      "properties": {
        "twig-formatter.formatting": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable/disable Twig Formatter."
        },
        "twig-formatter.trailingComma": {
          "type": "string",
          "enum": [
            "all",
            "es5",
            "none"
          ],
          "default": "all",
          "description": "If there should be a trailing comma in arrays and objects."
        },
        "twig-formatter.indentStyle": {
          "type": "string",
          "enum": [
            "space",
            "tab"
          ],
          "default": "tab",
          "description": "Choose to indent using tabs or spaces."
        },
        "twig-formatter.tabSize": {
          "type": "integer",
          "default": 0,
          "description": "0 will default to the editor's tab size. Stores the number of 'inchar' values to comprise a single indentation."
        },
        "twig-formatter.printWidth": {
          "type": "integer",
          "default": 80,
          "description": "The maximum number of characters per line."
        },
        "twig-formatter.endOfLine": {
          "type": "string",
          "default": "lf",
          "enum": [
            "auto",
            "lf",
            "crlf",
            "cr"
          ],
          "description": "Which end of line characters to apply."
        },
        "twig-formatter.semi": {
          "type": "boolean",
          "default": true,
          "description": "Whether to insert a semicolon at the end of the file."
        },
        "twig-formatter.singleQuote": {
          "type": "boolean",
          "default": false,
          "description": "Whether to use single quotes instead of double quotes."
        },
        "twig-formatter.bracketSpacing": {
          "type": "boolean",
          "default": true,
          "description": "Whether to insert spaces between brackets in objects."
        },
        "twig-formatter.arrowParens": {
          "type": "string",
          "default": "avoid",
          "description": "Whether to always include parentheses around a sole arrow function parameter."
        }
      }
    }
  },
  "scripts": {
    "start": "rollup -c",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "build:pack": "npm run build && vsce package",
    "vscode:prepublish:disabled": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.js --bundle --outfile=extension/index.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.1",
    "esbuild": "^0.18.11",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "typescript": "^5.1.6",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "prettier": "^3.4.1",
    "prettier-plugin-twig-melody": "^0.4.6",
    "prettydiff": "^101.2.6",
    "rollup": "^3.26.2"
  }
}
